<% if(success && success.length){ %> 
    <div class="alert alert-success alert-dismissible mt-1 float-right fade show">
        <%=success%> 
        <button type="button" class="close btn-close" data-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %> 
    <% if(error && error.length){ %> 
    <div class="alert alert-danger alert-dismissible mt-1 float-right fade show">
        <%=error%> 
        <button type="button" class="close btn-close" data-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %> 