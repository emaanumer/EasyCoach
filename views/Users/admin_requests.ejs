<% layout("layouts/boilerplate.ejs") %>
<head>
  <style>
    .pt-3-half {
      padding-top: 1.4rem;
    }
  </style>
</head>

<div
  class="card mx-5 mb-5 mt-4"
  style="width: 80rem; background: linear-gradient(#e66465, #9198e5)"
>
<div class="card">
    <h3 class="card-header text-center font-weight-bold text-uppercase py-4">
      Requests Table:
    </h3>
    <div class="card-body">
      <div id="table" class="table-editable">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><strong>Session: 2022 / 2023</strong></td>
            </tr>
            <tr>
              <td></td>
            </tr>
          </tbody>
        </table>
        <table
          class="table table-bordered table-responsive-md table-striped text-center"
        >
          <tr>
            <th class="text-center">#</th>
            <th class="text-center">User Role</th>
            <th class="text-center">User ID</th>
            <th class="text-center">Name</th>
            <th class="text-center">Request Date</th>
            <th class="text-center">Information</th>
            <th class="text-center">Action</th>
          </tr>
          <% let i=0; %> 
          <% for (let request of requests){ %> 
          <tr>
            <td class="pt-3-half" contenteditable="true"><%=++i%></td>
            <td class="pt-3-half" contenteditable="true"><%=request.UserRole%></td>
            <td class="pt-3-half" contenteditable="true"><%=request.UserID%></td>
            <td class="pt-3-half" contenteditable="true"><%=request.UserName%></td>
            <td class="pt-3-half" contenteditable="true"><%=request.RequestDate%></td>
            <td class="pt-3-half" contenteditable="true"><%=request.Information%></td>
            <td>
              <span class="table-remove "
                ><a
                  type="button"
                  class="btn btn-primary btn-rounded btn-sm mb-1"
                  href="/admin/requests/<%=request.requestID%>/Approved"
                >
                  Approve
              </a></span
              >
              <span class="table-remove "
                ><a
                  type="button"
                  class="btn btn-danger btn-rounded btn-sm mt-1"
                  href="/admin/requests/<%=request.requestID%>/Rejected"
                >
                  Reject
                </a></span
              >
              
            </td>
          </tr>
          <% } %> 
        </table>
      </div>
    </div>
  </div>
  
</div>

<!-- Editable table -->
