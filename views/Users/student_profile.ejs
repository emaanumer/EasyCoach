<% layout("layouts/boilerplate.ejs") %>

<script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"
></script>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script src="/js/front_js.js"></script>

<div class="container m-5">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="150"
                height="160"
                fill="currentColor"
                class="rounded-circle"
                viewBox="0 0 16 16"
              >
                <path
                  d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"
                />
              </svg>
              <div class="mt-3">
                <h4><%=info.FirstName%> <%=info.LastName%></h4>
                <p class="text-secondary mb-1">Student</p>
                <p class="text-muted font-size-sm"><%=info.Department%></p>
                <input
                  class="form-control form-control-sm"
                  id="formFileSm"
                  type="file"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card align-right" style="width: 41rem">
        <div class="card-body">
          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a
                href="#personaldetails"
                id="personaldetails-tab"
                class="nav-link active"
                data-toggle="tab"
                >Personal Details</a
              >
            </li>
            <li class="nav-item">
              <a
                href="#payments"
                id="payments-tab"
                class="nav-link"
                data-toggle="tab"
                >Payments</a
              >
            </li>
            <li class="nav-item">
              <a
                href="#requests"
                id="requests-tab"
                class="nav-link"
                data-toggle="tab"
                >Requests</a
              >
            </li>
          </ul>

          <div class="tab-content">
            <div
              class="tab-pane fade show active"
              id="personaldetails"
              role="tabpanel"
            >
              <div class="col-md-12 mt-4">
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Full Name</h6>
                  </div>
    
                  <div class="col-sm-9 text-secondary"><%=info.FirstName%> <%=info.LastName%></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Cms ID</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=info.CmsID%></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                    <%=info.Email%>
                  </div>
                </div>
                <hr />
                <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Contact</h6>
                </div>
                <div class="col-sm-9 text-secondary"><%=info.Phone%></div>
              </div>
              <hr />
                <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Destination</h6>
                </div>
                <div class="col-sm-9 text-secondary"><%=Destination.DestName%></div>
              </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Address</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=info.Address%></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Driver Name</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=Driver.FirstName%> <%=Driver.LastName%> </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Vehicle</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=Driver.vehicleno%> </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Driver ID</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=info.DriverID%></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Timings</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=Route.ShiftTime%></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Fee/month</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=Destination.EquivDFare%></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-12">
                    <a class="btn btn-info" target="__blank" href="/user/profile"
                      >Edit Profile</a
                    >
                    <a class="btn btn-info" target="__blank" href="/home"
                      >Home Page</a
                    >
                  </div>
                </div>
              </div>
            </div>


            <div class="tab-pane fade" id="payments" role="tabpanel">
              <div class="card-body">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Challan Number</th>
                      <th scope="col">Due Date</th>
                      <th scope="col">Amount</th>
                      <th scope="col">Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let payment of Payments){ %> 
                    <tr>
                      <td><%=payment.ChallanNum%></td>
                      <td><%=payment.PaymentDate%></td>
                      <td><%=payment.Amount%></td>
                      <td><%=payment.PaidStatus%></td>
                    </tr>
                    <% } %> 
                  </tbody>
                </table>
              </div>
              <div class="card-body">
                <h5 class="card-title">Add Payment Details</h5>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Challan Number</th>
                      <th scope="col">Transaction ID</th>
                      <th scope="col">Payment Amount</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <form
                      action="/user/profile/<%=id%>/payment"
                      id="student_payment_form"
                      method="POST"
                      novalidate
                      class="needs-validation"> 
                    <td>
                      <input  class="form-control" type="text" name="challan_num" id="challan_num"  required placeholder="Challan Number"/>
                    </td>
                    <td>
                      <input  class="form-control" type="text" name="transaction_id" id="transaction_id"  required placeholder="Transaction ID"/>
                    </td>
                    <td>
                      <input  class="form-control" type="text" name="payment_amount" id="payment_amount"  required placeholder="Payment Amount"/>
                    </td>
                    <td>
                      <button
                        class="btn btn-success"
                        type="submit"
                        form="student_payment_form"
                      >Add
                      </button>
                    </td>
                     </form>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <div class="tab-pane fade" id="requests" role="tabpanel">
        
                <div class="card-body">
                  <h5 class="card-title">Previous Requests</h5>
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Request</th>
                        <th scope="col">Date</th>
                        <th scope="col">Response</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (let request of request_info){ %> 
                      <tr>
                        <td><%=request.Information%> </td>
                        <td><%=request.RequestDate%> </td>
                        <td><%=request.AdminAction%></td>
                      </tr>
                      <% } %> 
                    </tbody>
                  </table>
                </div>   
                 
                <div class="card-body">
                  <h5 class="card-title">Add Request</h5>
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Request</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <form
                        action="/user/profile/<%=id%>/request"
                        id="student_request_form"
                        method="POST"
                        novalidate
                        class="needs-validation"
                      > 
                      
                      <td>
                        <input
                          class="form-control"
                          type="text"
                          name="student_request"
                          id="student_request"
                          required
                          placeholder="Request"
                        />
                      </td>
                      <td>
                        <button
                          class="btn btn-success"
                          type="submit"
                          form="student_request_form"
                        >
                          Add
                        </button>
                      </td>
                    
                       </form>
                        
                        
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            </div>
          
      </div>
    </div>
  </div>
</div>
