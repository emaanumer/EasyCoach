<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
</head>

<body>
  <div
    class="card"
    style="margin-top: 40px; margin-left: 20px; margin-right: 20px"
  >
    <div class="card shadow">
      <h5
        class="card-title text-nowrap text-capitalize mb-0 col-sm-4 text-muted"
        style="margin-top: 20px; margin-bottom: 0px"
      >
        Search Student Profiles
      </h5>
      <div class="input-group input-group-sm w-auto col-sm-12">
        <input
          class="form-control form-control-sm"
          type="text"
          style="margin-left: 500px; padding-left: 0px; margin-right: 0px"
        />
        <button class="btn btn-outline-primary btn-sm" type="button">
          <svg
            class="bi bi-search mb-1"
            xmlns="http://www.w3.org/2000/svg"
            width="1em"
            height="1em"
            fill="currentColor"
            viewBox="0 0 16 16"
          >
            <path
              d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"
            ></path>
          </svg>
        </button>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Cms ID</th>
              <th scope="col">Contact Number</th>
              <th scope="col">Destination Name</th>
              <th scope="col">Vehicle</th>
              <th scope="col" class="text-center">Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td class="text-truncate" style="max-width: 200px">Emaan Umer</td>
              <td class="text-truncate" style="max-width: 200px">
                emaanumer012@gmail.com
              </td>
              <td>371551</td>
              <td>03365222449</td>
              <td>Media Town</td>
              <td>C-1728</td>
              <td class="text-center">Active</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div style="margin: 20px">
    <a
      href="/register"
      class="btn btn-secondary"
      style="width: 100%; background-color: #5c6ac4"
    >
      Register a Student
    </a>
  </div>
</body>
