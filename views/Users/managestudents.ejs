<% layout("layouts/boilerplate.ejs") %>

<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
</head>

<body>
  <div
    class="card"
    style="margin-top: 40px; margin-left: 20px; margin-right: 20px"
  >
    <div class="card shadow">
      <h5
        class="card-title text-nowrap text-capitalize mb-0 col-sm-4 text-muted"
        style="margin-top: 20px; margin-bottom: 0px"
      >
        Search Student Profiles
      </h5>
      <div class="input-group input-group-sm w-auto justify-content-end">
        <form action="/searchstudents">
          <input
            class="form-control form-control"
            type="search"
            name="searchdata"
            style="margin-left: -15px; padding-right: 10px; margin-right: 500px"
            placeholder="Search..."
          />
        </form>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Cms ID</th>
              <th scope="col">Contact Number</th>
              <th scope="col">Destination Name</th>
              <th class="text-center" scope="col">Driver ID</th>
              <th scope="col" class="text-center">End Date</th>
            </tr>
          </thead>
          <tbody>
            <%i=1%> <% rows.forEach(row => { %>
            <tr>
              <td>
                <a
                  href="/studentprofile?row=<%= encodeURIComponent(JSON.stringify(row)) %>"
                  style="position: absolute; display: block; width: 98%"
                  ><%=i++%></a
                >
              </td>
              <td class="text-truncate" style="max-width: 500px">
                <%=row.FirstName%><%= " "%><%=row.LastName%>
              </td>
              <td class="text-truncate" style="max-width: 500px">
                <%=row.Email%>
              </td>
              <td><%=row.CmsID%></td>
              <td><%=row.Phone%></td>
              <td><%=row.DestName%></td>
              <td class="text-center"><%=row.DriverID%></td>
              <td class="text-center"><%=(row.Enddate)%></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div style="margin: 20px">
    <a
      href="/register"
      class="btn btn-secondary"
      style="width: 100%; background-color: #5c6ac4"
    >
      Register a Student
    </a>
  </div>
</body>
