                      action="/routes/new"
                      id="add_route_details_form"
                      method="POST"
                      novalidate
                      class="needs-validation"
                    >
                      <td>
                        <input
                          class="form-control"
                          type="text"
                          name="route_id"
                          id="route_id"
                          required
                          placeholder="Route Id"
                        />
                      </td>
                      <td>
                        <select
                          class="custom-select form-select"
                          id="station_1"
                          name="station_1"
                        >
                          <% for(let destination of destination_list){ %>
                          <option value="<%=destination.DestName%>">
                            <%=destination.DestName%>
                          </option>
                          <% } %>
                        </select>
                      </td>
                      <td>
                        <select
                          class="custom-select form-select"
                          id="station_2"
                          name="station_2"
                        >
                          <% for(let destination of destination_list){ %>
                          <option value="<%=destination.DestName%>">
                            <%=destination.DestName%>
                          </option>
                          <% } %>
                        </select>
                      </td>
                      <td>
                        <select
                          class="custom-select form-select"
                          id="station_3"
                          name="station_3"
                        >
                          <% for(let destination of destination_list){ %>
                          <option value="<%=destination.DestName%>">
                            <%=destination.DestName%>
                          </option>
                          <% } %>
                        </select>
                      </td>
                      <td>
                        <select
                          class="custom-select form-select"
                          id="time"
                          name="time"
                        >
                          <option selected value="9-5">9-5</option>
                          <option value="1-5">1-5</option>
                          <option value="1-9">1-9</option>
                        </select>
                      </td>
                      <td>
                        <button
                          class="btn btn-success"
                          type="submit"
                          form="add_route_details_form"
                        >
                          Add
                        </button>
                      </td>
                    </form>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div
          class="card shadow p-3 mb-5 bg-white rounded"
          style="margin-top: 15px; margin-right: 10px; margin-left: -60px"
        >
          <div class="card-header text-left">Destination List</div>
          <div class="card-body">
            <div class="table-responsive">
              <div class="table-wrapper">
                <table class="table table-bordered col-lg-8">
                  <thead>
                    <tr>
                      <th>Destination Name</th>
                      <th>Student Fare</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let destination of destination_list){ %>
                    <%   if(upd_destination.DestName!=destination.DestName){  %>
                    <tr>
                      <td><%=destination.DestName%></td>
                      <td><%=destination.EquivDFare%></td>
                      <td>
                        <a href="/destination/<%=destination.DestName%>/edit">
                          <i class="material-icons">&#xE254;</i>
                        </a>
                      <form
                        id="delete_destination_<%=destination.DestName%>_form"
                        action="/destination/<%=destination.DestName%>?_method=DELETE"
                        method="POST"
                      >
                        
                          <a
                            onclick="document.getElementById('delete_destination_<%=destination.DestName%>_form').submit();"
                          >
                            <i class="material-icons">&#xE872;</i>
                          </a>
                        </td>
                      </form>
                      
                    </tr>
                    <% }} %>
                    <tr>
                      <form
                        action="/destination/<%=upd_destination.DestName%>?_method=PUT"
                        id="update_destination_form"
                        method="POST"
                        novalidate
                        class="needs-validation"
                      >
                        <td>
                          <input
                            class="form-control"
                            type="text"
                            name="destination_name"
                            id="destination_name"
                            required
                            value="<%=upd_destination.DestName%>"
                            placeholder="Destination Name"
                            disabled
                          />
                        </td>
                        <td>
                          <input
                            class="form-control"
                            type="number"
                            name="student_fare"
                            id="student_fare"
                            required
                            value="<%=upd_destination.EquivDFare%>"
                            placeholder="Student Fare"
                          />
                        </td>
                        <td>
                          <button
                            class="btn btn-success"
                            type="submit"
                            form="update_destination_form"
                          >
                            Update
                          </button>
                        </td>
                      </form>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
